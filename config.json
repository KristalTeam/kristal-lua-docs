{
    "name": "Kristal",
    "files": ["mod.lua", "lib.lua"],
    "settings": {
        "Lua.runtime.version": "LuaJIT",
        "Lua.runtime.special": {
            "modRequire": "require"
        },
        "Lua.workspace.library": [
            "${3rd}/love2d/library"
        ],
        "Lua.diagnostics.disable": [
            "need-check-nil",
            "inject-field",
            "duplicate-set-field"
        ],
        "Lua.type.weakNilCheck": true,
        "Lua.type.weakUnionCheck": true
    }
}